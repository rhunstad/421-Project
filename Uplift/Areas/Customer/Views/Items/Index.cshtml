@{
    ViewData["Title"] = "Items";
}
@model dynamic


<script type="text/javascript" src="~/js/script.js"></script>

<main id="main">
    <div class="si-row">
        <div class="si-column si-left">
            <img id="si-main-image" src="https://i.imgur.com/hGhLQaH.jpg" alt="Image" />
            <div id="imageGallery" class="iG">
                <img onclick="swapPic1()" id="p1" class="miniImage" src="https://i.imgur.com/hGhLQaH.jpg" alt="Image" />
                <img onclick="swapPic2()" id="p2" class="miniImage" src="https://i.imgur.com/q4oOAWR.jpg" alt="Image" />
                <img onclick="swapPic3()" id="p3" class="miniImage" src="https://i.imgur.com/jPhCDdB.jpg" alt="Image" />
            </div>
        </div>
        <div class="si-column si-right">
            <h2 id="si-Title">@Model.item.Title</h2>
            <h3 id="si-Price">$@Model.item.Price</h3>

            <button class="btn" style="background-color:#68A4C4;color:#DDECF5;" id="si-Button">
                Contact Seller
            </button>
            <br />
            @if (Model.user.Email == "tafluker@crimson.ua.edu")
            {
                <button class="btn" style="background-color:#68A4C4;color:#DDECF5;" id="si-Button">Make Offer</button>
            }

            <form id="contact-seller-form"style="display: inline" method="get">
                <button class="btn" style="background-color:#68A4C4;color:#DDECF5;">Contact Seller</button>
            </form>
            <script>
                contactSeller = document.getElementById("contact-seller-form");
                var actionLink = document.createAttribute('action');
                actionLink.value = "/Customer/User/Index/" + '@Model.item.SellerID';
                contactSeller.setAttributeNode(actionLink);
            </script>
        </div>

        <div class="si-column si-right">
            <h2>Offers: </h2>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name: </th>
                    </tr>
                </thead>
                <tbody id="offers-table-body">
                </tbody>
            </table>
        </div>
    </div>

    @foreach (var Offer in Model.Offers)
    {
        <script>
                loadOffer('@Offer.FName', '@Offer.LName', '@Offer.buyerEmail')
        </script>

    }

    


</main>
